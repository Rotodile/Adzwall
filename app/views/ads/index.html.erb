<h1>Ads</h1>

<table>
  <thead>
    <tr>
      <th>Brand</th>
      <th>Condition</th>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ads.each do |ad| %>
      <tr>
        <td><%= ad.brand %></td>
        <td><%= ad.condition %></td>
        <td><%= ad.title %></td>
        <td><%= ad.description %></td>
        <td><%= ad.price %></td>
        <td><%= link_to 'Show', ad %></td>
        <td><%= link_to 'Edit', edit_ad_path(ad) %></td>
        <td><%= link_to 'Destroy', ad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>