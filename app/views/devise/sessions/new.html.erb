<div class='container text-center login-container'>

  <h2 class="login-header">Login</h2><br />

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input_field :email,
                required: false,
                autofocus: true,
                placeholder: 'Email',
                input_html: { autocomplete: "email" }, class: 'form-control login-input' %>
      <br />
      <%= f.input_field :password,
                required: false,
                placeholder: 'Password',
                input_html: { autocomplete: "current-password" }, class: 'form-control login-input' %>
      <br />
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Log in", class: 'btn btn-primary login-submit' %>
    </div>
  <% end %>

  <p class="login-render-link"><%= render "devise/shared/links" %></p>
</div>

<style>
  html {
    height: 100% !important;
  }
  body {
    background: linear-gradient(to bottom right, #c6e9fb, #d3c8e6);
    height: 100%;
    margin: 0;
    background-repeat: no-repeat;
    background-attachment: fixed;
  }
</style>
